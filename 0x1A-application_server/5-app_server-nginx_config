# Default server configuration
#
server {
	listen 80 default_server;
	error_page 404 /404.html;
	location = /404.html {
		root /var/www/html;
		internal;
	}
	listen [::]:80 default_server;
	root /var/www/html;

	# Add index.php to the list if you are using PHP

	server_name _;

	location /hbnb_static/ {
		alias /data/web_static/current/;
	}

	# Serve /airbnb-onepage/ route on AirBnB_clone_v3
	location /airbnb-onepage/ {
		proxy_pass http://localhost:5000/airbnb-onepage;
		proxy_redirect off;
	}

	 # Serve /number_odd_or_even/ route on AirBnB_clone_v3
	location /airbnb-dynamic/number_odd_or_even/ {
		proxy_pass http://localhost:5001/number_odd_or_even/;
		proxy_redirect off;
	}

	# Serve API on AirBnB_clone_v3
	location /api/ {
		proxy_pass http://localhost:5002/api/;
		proxy_redirect off;
	}

	# Configure /2-hbnb route of AirBnB_clone_v4 as root location
	location / {
		proxy_pass http://127.0.0.1:5003/2-hbnb;
	}

	# Serve static content for AirBnB_clone_v4
	location /static {
		proxy_pass http://127.0.0.1:5003;
	}
	add_header X-Served-By 449593-web-02;

	rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4.com permanent;
	# location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		# try_files $uri $uri/ =404;
	# }

	# 404 error page
	error_page 404 /404.html;
	location /404 {
		root /var/www/html;
		internal;
	}

	location /hbnb_static {
		alias /data/web_static/current/;
	}
}
